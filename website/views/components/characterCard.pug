.characterCardHolder
    .characterCard(id=`card-${character.character_id}` unselectable="on" style=`--character-count: ${index > 0 ? index * (30 + 5) : index * 15}px;`)
        .characterImageHolder(style=`--average-color: ${character.average_color || '#000000'}`)
            img(src=character.picture_url alt="Character Image")
        .characterInformation
            span.characterName #{character.name} (#{character.age})
            

            span.characterLevel 
                img(src=`../../../${character.level}.png`, alt="icon")
            span.characterDescription #{character.description}
            .infoBundle
                span(--race=character.race) Race
                    //- span.characterRace #{}
                span(--class=character.class) Class 
                span Icon
                    img(src=`../../../${character.class}.png`, alt="icon").classIcon

                    //- span.characterClass #{character.class} 
                span(--background=character.background) Background 
                //- img(src=`../../../${character.class}.png`, alt="icon")
                    //- span.characterBackground #{character.background}
        