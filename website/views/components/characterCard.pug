.characterCard(id=`card-${character.character_id}` unselectable="on" style=`--average-color: ${character.average_color || 'var(--placeholder-text-color)'}`)
    input(action="show" type="checkbox" id=`show-more-info-${character.character_id}`)
    .additional 
        .user-card 
            label(for=`show-more-info-${character.character_id}`)
            .player.center 
                img(src=`${character.player.displayAvatarURL()}`)
                span #{character.player.username}
            .img-holder
                img(src=character.picture_url alt="Character Image")
            .more-info 
                h1 #{character.name}
                    span.age - #{character.age} years
                    .level-wrapper 
                        span Lvl.
                        img(src=`../../../${character.level}.png`, alt="icon").level
                .infoBundle
                    .infoPair
                        i.fa-solid.fa-hand-fist 
                        .progressBar.strength
                            span(style=`--progress: ${50}%; background-color: var(--delete-color);`)
                    .infoPair
                        i.fa-solid.fa-hand 
                        .progressBar.dexterity
                            span(style=`--progress: ${25}%; background-color: var(--success-color);`)
                    .infoPair
                        i.fa-solid.fa-heart 
                        .progressBar.constitution
                            span(style=`--progress: ${75}%; background-color: burlywood;`)
                    .infoPair
                        i.fa-solid.fa-brain 
                        .progressBar.intelligence
                            span(style=`--progress: ${30}%; background-color: var(--edit-color);`)
                    .infoPair
                        i.fa-solid.fa-eye 
                        .progressBar.wisdom
                            span(style=`--progress: ${60}%; background-color: orange;`)
                    .infoPair
                        i.fa-solid.fa-comment 
                        .progressBar.charisma
                            span(style=`--progress: ${100}%; background-color: purple;`)
                .stats 
                    div 
                        .title Race: 
                        .value #{character.race}
                    
                    div 
                        .title Class: 
                        .value #{character.class}
                            //- img(src=`../../../${character.class}.png`, alt="icon").icon
                    div 
                        .title Background: 
                        .value #{character.background}
    .general
        h1 #{character.name} 
            span.age - #{character.age} years
            .level-wrapper 
                span Lvl.
                img(src=`../../../${character.level}.png`, alt="icon").level
        p #{character.description}
    
