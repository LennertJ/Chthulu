input(action="edit" type="checkbox" id="editQuestModal")
label(for="editQuestModal" class="edit-modal-background")
.editQuestModal 
    .modal-header
        h3 Edit quest
        label(for="editQuestModal")
            i.fas.fa-times
    .modal-content
        form
            .label-input-section
                label.required Priority
                .select-wrapper 
                    .select 
                        .select_trigger 
                            span( id="quest_priority") Select a priority
                            i.fas.fa-chevron-down
                        .custom-options 
                            span.custom-option(data-value="5")
                                i.fas.fa-circle(style="color: #DE3700;")
                                | !{' | '}
                                span.text Very high
                            span.custom-option(data-value="4") 
                                i.fas.fa-circle(style="color: #F58B00;")
                                | !{' | '}
                                span.text High
                            span.custom-option(data-value="3")
                                i.fas.fa-circle(style="color: #E1FF00;")
                                | !{' | '}
                                span.text Normal
                            span.custom-option(data-value="2")
                                i.fas.fa-circle(style="color: #92E000;")
                                | !{' | '}
                                span.text Low
                            span.custom-option(data-value="1")
                                i.fas.fa-circle(style="color: #2AA10F;")
                                | !{' | '}
                                span.text Very low
            .label-input-section
                label.required Title
                    .charCountDiv
                        p.characterCount 0
                        p /
                        p.maxCharacterCount 30
                input(type="text" autocomplete="off" spellcheck="false" id="edit_quest_title" oninput="updateInput(this)" onkeydown="return event.key != 'Enter';" maxlength="30")
            .label-input-section
                label.optional Description
                    .charCountDiv
                        p.characterCount 0
                        p /
                        p.maxCharacterCount 400
                textarea(cols="5" rows="5" maxlength="400" spellcheck="false" autocomplete="off" id="edit_quest_description" oninput="updateInput(this)")
            .editButton
                input(id="edit_quest" type="button" value="Edit" onclick="editQuest(this)")
                i.fa.fa-spinner.fa-spin.fa-align-center