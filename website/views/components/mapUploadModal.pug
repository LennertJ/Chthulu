style 
    include ../assets/css/modal.css

#modalBackgroundMap 

.modal(action="create")#uploadMapModal
    .modal-header
        .icon
            .bot-icon
                img(src=bot_icon alt="Chthulu Avatar")
        h3 Upload map
        label(for="uploadMapModal") 
            i.fa-solid.fa-xmark.fa-xl#closeButtonMap
    .modal-content
        form
    .modal-footer           
        .button-wrapper
            input(id="create_quest" type="button" value="Create" disabled="true" onclick="createQuest(this)")
            i.fa.fa-spinner.fa-spin.fa-align-center