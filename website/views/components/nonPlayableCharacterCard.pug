    .characterImageHolder(style=`--average-color: ${npc.average_color || '#000000'}`)
        img(src=npc.picture_url alt="Character Image")
    .characterInformation
        .characterInformationHeader
            span.characterName #{npc.name}
            //- span.characterLevel Lvl.
            //-     img(src=`../../../${character.level}.png`, alt="icon")
        span.characterDescription #{npc.description}
        .characterInformationStatistics
            .infoBundle
                .infoPair
                    span Age 
                    span #{npc.age}
                .infoPair
                    span Race 
                    span #{npc.race}
                .infoPair
                    span Class 
                    span #{npc.class}
                .infoPair
                    span Background 
                    span #{npc.title}
