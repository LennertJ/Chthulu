input(action="status" type="checkbox" id="statusQuestModal")
label(for="statusQuestModal" action="status").modal-background
.modal(action="status") 
    .modal-header
        .icon
            .bot-icon
                img(src=bot_icon alt="Chthulu Avatar")
        h3 Change status
        label(for="statusQuestModal")
            i.fa-solid.fa-xmark.fa-xl
    .modal-content
        form.status
            input(type="button" value="Done" onclick="statusChangeQuest(this.value)").done
                //- i.far.fa-check-circle
            input(type="button" value="Expired" onclick="statusChangeQuest(this.value)").expired
                //- i.far.fa-clock
            input(type="button" value="Failed" onclick="statusChangeQuest(this.value)").failed
                //- i.fas.fa-times