extends ./template/layout.pug
block scripts
    script(type='text/javascript', src='https://www.gstatic.com/charts/loader.js')
    script
        include ./static/theme.js
        include ./static/mainDashboardStatistics.js
    script var characters = !{JSON.stringify(characters)}; 

block styles 
    style 
        include ./assets/css/main.css
        include ./assets/css/sidebar.css
        include ./assets/css/menu.css
        include ./assets/css/dashboard.css

block dashboardContent
    .dashboardContent
        div(id='topFiveClasses')
        div(id='topFiveRaces')
        div(id='topFiveBackgrounds')
        div.dashboardContentItem
            span.dashboardContentItemTitle Highest Character Level
            span.dashboardContentItemContent#highestCharacterLevel #{highestCharacterLevel}          
